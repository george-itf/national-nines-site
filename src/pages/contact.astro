---
import BaseLayout from '../layouts/BaseLayout.astro';
const success = Astro.url.searchParams.get('success');
const baseUrl = import.meta.env.BASE_URL || '/';
const siteUrl = import.meta.env.SITE || 'https://nationalninesgolf.co.uk';
---

<BaseLayout title="Contact" description="Get in touch with National Nines Golf. Questions about events, equipment donations, or club partnerships.">
  {success && (
    <div class="bg-green-100 border-b border-green-200 py-4">
      <div class="max-w-4xl mx-auto px-4 text-center">
        <p class="text-green-800 font-semibold">âœ“ Message sent successfully! We'll be in touch soon.</p>
      </div>
    </div>
  )}
  <section class="py-20 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h1 class="font-heading text-5xl font-bold text-brand-black mb-4">Get in Touch</h1>
        <div class="w-20 h-1 bg-brand-red mx-auto mb-6"></div>
        <p class="text-gray-600">
          Have a question about our events or want to get involved? We'd love to hear from you.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div class="bg-white rounded-2xl shadow-lg p-8">
          <h2 class="font-heading text-2xl font-bold text-brand-black mb-6">Send a Message</h2>
          <form action="https://formsubmit.co/info@nationalninesgolf.co.uk" method="POST" class="space-y-6">
            <input type="hidden" name="_subject" value="New contact from National Nines website">
            <input type="hidden" name="_captcha" value="false">
            <input type="hidden" name="_next" value={`${siteUrl}${baseUrl}contact/?success=true`}>
            <div>
              <label for="name" class="block text-sm font-semibold text-gray-700 mb-2">Your Name</label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-red focus:border-transparent outline-none transition"
                placeholder="John Smith"
              />
            </div>
            
            <div>
              <label for="email" class="block text-sm font-semibold text-gray-700 mb-2">Email Address</label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-red focus:border-transparent outline-none transition"
                placeholder="john@example.com"
              />
            </div>
            
            <div>
              <label for="subject" class="block text-sm font-semibold text-gray-700 mb-2">Subject</label>
              <select 
                id="subject" 
                name="subject" 
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-red focus:border-transparent outline-none transition"
              >
                <option value="">Select a topic...</option>
                <option value="events">Events & Competitions</option>
                <option value="shop">Shop Enquiry</option>
                <option value="partnership">Club Partnership</option>
                <option value="donation">Donate Equipment</option>
                <option value="other">Other</option>
              </select>
            </div>
            
            <div>
              <label for="message" class="block text-sm font-semibold text-gray-700 mb-2">Message</label>
              <textarea 
                id="message" 
                name="message" 
                rows="5" 
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-red focus:border-transparent outline-none transition resize-none"
                placeholder="How can we help you?"
              ></textarea>
            </div>
            
            <button 
              type="submit"
              class="w-full bg-brand-red text-white py-3 rounded-lg font-bold uppercase tracking-wide hover:bg-red-700 transition disabled:opacity-50 disabled:cursor-not-allowed"
              id="contact-submit"
            >
              Send Message
            </button>
            <script>
              document.querySelector('form')?.addEventListener('submit', () => {
                const btn = document.getElementById('contact-submit') as HTMLButtonElement;
                if (btn) {
                  btn.disabled = true;
                  btn.textContent = 'Sending...';
                }
              });
            </script>
          </form>
        </div>
        
        <!-- Contact Info -->
        <div class="space-y-8">
          <div class="bg-white rounded-2xl shadow-lg p-8">
            <h2 class="font-heading text-2xl font-bold text-brand-black mb-6">Contact Details</h2>
            
            <div class="space-y-6">
              <div class="flex items-start gap-4">
                <div class="w-10 h-10 bg-brand-red/10 rounded-full flex items-center justify-center flex-shrink-0">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-brand-red" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-brand-black">Phone</h3>
                  <a href="tel:07818400286" class="text-gray-600 hover:text-brand-red transition">07818 400286</a>
                </div>
              </div>
              
              <div class="flex items-start gap-4">
                <div class="w-10 h-10 bg-brand-red/10 rounded-full flex items-center justify-center flex-shrink-0">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-brand-red" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-brand-black">Email</h3>
                  <a href="mailto:info@nationalninesgolf.co.uk" class="text-gray-600 hover:text-brand-red transition">info@nationalninesgolf.co.uk</a>
                </div>
              </div>
            </div>
          </div>
          
          <div class="bg-brand-black rounded-2xl p-8 text-white">
            <h2 class="font-heading text-xl font-bold mb-4">Donate Equipment</h2>
            <p class="text-gray-300 mb-4">
              Have golf equipment you no longer need? We'd love to give it a new home! 
              All donated items are sold through our shop with proceeds supporting 9-hole golf.
            </p>
            <p class="text-gray-300">
              Contact us to arrange collection or drop-off in the Kent/Essex area.
            </p>
          </div>
          
          <div class="bg-white rounded-2xl shadow-lg p-8">
            <h2 class="font-heading text-xl font-bold text-brand-black mb-4">Follow Us</h2>
            <div class="flex gap-4">
              <a href="https://facebook.com/nationalninesgolf" target="_blank" rel="noopener" aria-label="Facebook" class="w-10 h-10 bg-gray-100 rounded-full flex items-center justify-center text-gray-600 hover:bg-brand-red hover:text-white transition">
                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
              </a>
              <a href="https://instagram.com/nationalninesgolf" target="_blank" rel="noopener" aria-label="Instagram" class="w-10 h-10 bg-gray-100 rounded-full flex items-center justify-center text-gray-600 hover:bg-brand-red hover:text-white transition">
                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

